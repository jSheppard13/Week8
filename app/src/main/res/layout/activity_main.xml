<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="383dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtSend"
            android:hint="Enter String"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="13dp" android:layout_marginStart="13dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" android:layout_marginRight="15dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="221dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPage2"/>
    <Button
            android:text="Page 2"
            android:layout_width="371dp"
            android:layout_height="58dp"
            android:id="@+id/btnPage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="363dp" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSend"/>
</android.support.constraint.ConstraintLayout>